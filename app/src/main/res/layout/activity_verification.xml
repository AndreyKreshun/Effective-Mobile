<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Текст с информацией о коде -->
    <TextView
        android:id="@+id/tv_verification_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправили код на example@mail.ru"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Текст с инструкцией -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Напишите его, чтобы подтвердить, что это вы, а не кто-то другой входит в личный кабинет"
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <!-- Поле для ввода кода (4 ячейки) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_code_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/et_code_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
             />

        <EditText
            android:id="@+id/et_code_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
            />

        <EditText
            android:id="@+id/et_code_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="24sp"
            android:inputType="number"
            android:maxLength="1"
             />
    </LinearLayout>

    <!-- Кнопка подтверждения -->
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00427D"
        android:enabled="false"
        android:text="Подтвердить"
        android:textColor="@android:color/white" />
</LinearLayout>
